[user]
	name = Christian Lange
	email = cl@ariva.de
[core]
	pager = "diff-so-fancy | less --tabs=4 -RFX"
	editor = vim
	excludesFile = '~/.gitignore'
[diff]
	ignoreSubmodules = all
[i18n]
	commitencoding = UTF-8
[merge]
	tool = vimdiff
[alias]
	unadd = restore --staged
	ls = log --no-merges --decorate=short --pretty=format:'%C(red)%h %C(green)%cs (%cr) %C(bold blue)%aN%C(auto)%d%C(reset) %s'
	ll = log --no-merges --decorate=short --pretty=format:'%C(red)%h %C(green)%ci (%cr) %C(bold blue)%aN%C(auto)%d%C(reset) %s' --numstat
	lg = log --graph --pretty=format:'%C(red)%h%C(reset) -%C(auto)%d%C(reset) %s %C(green)%cr %C(bold blue)%aN%C(reset) [Parents: %C(bold yellow)%p%Creset]' --abbrev-commit --date=relative
[color]
	ui = auto
[color "diff-highlight"]
	oldNormal = "red bold"
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"
[color "diff"]
	meta = "11"
	frag = "magenta bold"
	func = "146 bold"
	commit = "yellow bold"
	old = "red bold"
	new = "green bold"
	whitespace = "red reverse"
[color "status"]
	added = "yellow bold"
	changed = "red bold"
	untracked = "cyan bold"
